# This is very neat: argv is the list of command line arguments passed to a script.
# argv[0] is the script name

from sys import argv

script, first, second, third = argv

print("The script is called: {script}".format(script=script))
print("The first variable is: {first}".format(first=first))
print("The second variable is: {second}".format(second=second))
print("The third variable is: {third}".format(third=third))
